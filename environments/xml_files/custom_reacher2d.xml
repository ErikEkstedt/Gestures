<mujoco model="reacher2d">
	<compiler angle="radian" inertiafromgeom="true"/>
	<default>
		<joint armature="1" damping="1" limited="true"/>
		<geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
	</default>
	<option gravity="0 0 -9.81" integrator="RK4" timestep="0.01"/>
	<worldbody>
		<!-- Arena -->
		<geom conaffinity="0" contype="0" name="ground" pos="0 0 0" rgba="0.9 0.9 0.9 1" size="1 1 10" type="plane"/>
		<geom conaffinity="0" fromto="-.3 -.3 .01 .3 -.3 .01" name="sideS" rgba="0.9 0.4 0.6 1" size=".02" type="capsule"/>
		<geom conaffinity="0" fromto=" .3 -.3 .01 .3  .3 .01" name="sideE" rgba="0.9 0.4 0.6 1" size=".02" type="capsule"/>
		<geom conaffinity="0" fromto="-.3  .3 .01 .3  .3 .01" name="sideN" rgba="0.9 0.4 0.6 1" size=".02" type="capsule"/>
		<geom conaffinity="0" fromto="-.3 -.3 .01 -.3 .3 .01" name="sideW" rgba="0.9 0.4 0.6 1" size=".02" type="capsule"/>

		<!-- cylinder -->
		<geom conaffinity="0" contype="0" fromto="0 0.01 0 0 0 0.02" name="robot_root_right" rgba="0.1 0.9 0.1 1" size=".011" type="cylinder"/>
		<body name="robot" pos="0 0 .01">
			<!-- Arm -->
			<body name="robot_body0a" pos="0 0 .01">
				<geom fromto="0 0 0 0.1 0 0" name="robot_link0a" rgba="0.9 0.1 0.1 1" size=".01" type="capsule"/>
				<joint axis="0 0 1" limited="false" name="robot_joint0a" pos="0 0 0" type="hinge"/>

				<body name="robot_body0b" pos="0.1 0 0">
					<joint axis="0 0 1" limited="true" name="robot_joint0b" pos="0 0 0" range="-3.0 3.0" type="hinge"/>
					<geom fromto="0 0 0 0.1 0 0" name="robot_link0b" rgba="0.9 0.1 0.1 1" size=".01" type="capsule"/>

					<body name="robot_fingertip0" pos="0.11 0 0">
						<geom contype="0" name="robot_fingertip0" pos="0 0 0" rgba="0.9 0.9 0.1 1" size=".01" type="sphere"/>
					</body>

				</body>
			</body>
			<!-- Arm -->
			<body name="robot_body1a" pos="0 0 .01">
				<geom fromto="0 0 0 0.1 0 0" name="robot_link1a" rgba="0.1 0.1 0.9 1" size=".01" type="capsule"/>
				<joint axis="0 0 1" limited="false" name="robot_joint1a" pos="0 0 0" type="hinge"/>

				<body name="robot_body1b" pos="0.1 0 0">
					<joint axis="0 0 1" limited="true" name="robot_joint1b" pos="0 0 0" range="-3.0 3.0" type="hinge"/>
					<geom fromto="0 0 0 0.1 0 0" name="robot_link1b" rgba="0.1 0.1 0.9 1" size=".01" type="capsule"/>

					<body name="robot_fingertip1" pos="0.11 0 0" rgba="0.1 0.9 0.9 1">
						<geom contype="0" name="robot_fingertip1" pos="0 0 0" rgba="0.1 0.9 0.9 1" size=".01" type="sphere"/>
					</body>

				</body>
			</body>

		</body>
		<!-- Target -->
		<body name="target0" pos="0 0 .01">
			<joint armature="0" axis="1 0 0" damping="0" limited="true" name="target0_x" pos="0 0 0" range="-.27 .27" stiffness="0" type="slide"/>
			<joint armature="0" axis="0 1 0" damping="0" limited="true" name="target0_y" pos="0 0 0" range="-.27 .27" stiffness="0" type="slide"/>
			<geom conaffinity="0" contype="0" name="target0" pos="0 0 0" rgba="0.9 0.9 0.1 1" size=".009" type="sphere"/>
		</body>
		<!-- Target -->
		<body name="target1" pos="0 0 .01">
			<joint armature="0" axis="1 0 0" damping="0" limited="true" name="target1_x" pos="0 0 0" range="-.27 .27" stiffness="0" type="slide"/>
			<joint armature="0" axis="0 1 0" damping="0" limited="true" name="target1_y" pos="0 0 0" range="-.27 .27" stiffness="0" type="slide"/>
			<geom conaffinity="0" contype="0" name="target1" pos="0 0 0" rgba="0.1 0.9 0.9 1" size=".009" type="sphere"/>
		</body>
	</worldbody>
	<actuator>
		<motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="joint0a"/>
		<motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="joint0b"/>
		<motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="joint1a"/>
		<motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="joint1b"/>
	</actuator>
</mujoco>
