<mujoco model="Arm">
	<compiler angle="radian" inertiafromgeom="true"/>
	<default>
		<joint armature="1" damping="1" limited="true"/>
		<geom contype="0" friction="1 0.1 0.1" rgba="0.2 0.2 0.7 1"/>
		<default class="target">
			<geom contype="0" friction="1 0.1 0.1" rgba="0.9 0.2 0 1"/>
		</default>
	</default>

	<option integrator="RK4" iterations="50" solver="PGS" timestep="0.003">
	</option>
	<worldbody>
		<!-- Arena -->
		<geom conaffinity="0" contype="0" name="ground" pos="0 0 0" rgba="0.9 0.1 0.0 1" size="1 1 10" type="plane"/>

		<!-- Base -->
		<geom conaffinity="0" contype="0" fromto="0 0 0 0 0 0.4" name="base" rgba="0.9 0.4 0.6 1" size=".02" type="cylinder"/>

		<!-- Arm -->
		<body name="robot_arm" pos="0 0 0.41">
			<geom name="robot_shoulder" pos="0 0 0" rgba="0.9 0.2 0.1 0.9" size=".025" type="sphere"/>
			<joint axis="0 0 1" limited="false" name="robot_shoulder_joint" pos="0 0 0" type="hinge"/>
			<geom fromto="0 0 0 0.2 0 0" name="robot_arm0" rgba="0.0 0.4 0.8 0.9" size=".01" type="capsule"/>

			<!-- Lower Arm -->
			<body name="robot_arm1" pos="0.21 0 0">
				<joint axis="0 1 0" limited="false" name="robot_elbow_joint" pos="0 0 0" type="hinge"/>
				<geom fromto="0 0 0 0.2 0 0" name="robot_arm1" rgba="0.0 0.4 0.8 0.9" size=".01" type="capsule"/>
				<geom contype="0" pos="0 0 0" name="robot_elbow" rgba="0.0 0.0 0.0 0.9" size=".02" type="sphere"/>

				<!-- Hand -->
				<body name="robot_hand" pos="0.2 0 0">
					<geom contype="0" pos="0 0 0" name="robot_hand" rgba="0.9 0.1 0.2 0.9" size=".025" type="sphere"/>
				</body>
			</body>
		</body>
		<!-- Target -->
		<body name="target_arm" pos="0 0 0.41" childclass="target">
			<geom name="target_shoulder" pos="0 0 0"  size=".025" type="sphere"/>
			<joint axis="0 0 1" limited="false" name="target_shoulder_joint" pos="0 0 0" type="hinge"/>
			<geom fromto="0 0 0 0.2 0 0" name="target_arm0"  size=".01" type="capsule"/>

			<!-- Lower Arm -->
			<body name="target_arm1" pos="0.21 0 0">
				<joint stiffness="1" springref="1" axis="0 1 0" limited="false" name="target_elbow_joint" pos="0 0 0" type="hinge"/>
				<geom fromto="0 0 0 0.2 0 0" name="target_arm1" rgba="0.9 0.2 0.9 0.3" size=".01" type="capsule"/>
				<geom contype="0" pos="0 0 0" name="target_elbow" rgba="0.0 0.0 0.0 0.9" size=".02" type="sphere"/>
				<!-- Hand -->
				<body name="target_hand" pos="0.2 0 0">
					<geom contype="0" pos="0 0 0" name="target_hand" rgba="1.0 0.0 0.0 0.9" size=".025" type="sphere"/>
				</body>
			</body>
		</body>
	</worldbody>
	<actuator>
		<motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="shoulder_joint"/>
		<motor ctrllimited="true" ctrlrange="-1.0 1.0" gear="200.0" joint="elbow_joint"/>
	</actuator>
</mujoco>
