<mujoco model="ReacherHumanoid">
	<compiler angle="radian" inertiafromgeom="true"/>
	<default>
		<joint armature="1" damping="1" limited="false"/>
		<geom contype="0" friction="1 0.1 0.1" rgba="0.7 0.7 0 1"/>
	</default>

	<option integrator="RK4" iterations="50" solver="PGS" timestep="0.003">
	</option>
	<worldbody>
		<!-- Base -->
		<geom conaffinity="0" contype="0" fromto="0 0 0 0 0 0.4" name="base" rgba="0.9 0.4 0.6 1" size=".02" type="cylinder"/>
        <geom fromto="0 -0.1 0.4 0 0.1 0.4" name="robot" rgba="0.9 0.4 0.6 1" size=".02" type="cylinder"/>
		<body name="robot" pos="0 -0.1 0">
            <!-- Arm -->
            <body name="robot_arm" pos="0 0 0.4">
                <geom name="robot_shoulder" pos="0 0 0" rgba="0.9 0.2 0.1 0.9" size=".025" type="sphere"/>
                <joint axis="0 0 1" limited="true" name="robot_shoulder_joint_z" pos="0 0 0" type="hinge"/>
                <joint axis="0 1 0" limited="true" name="robot_shoulder_joint_y" pos="0 0 0" type="hinge"/>
                <geom fromto="0 0 0 0.2 0 0" name="robot_arm0" rgba="0.0 0.4 0.8 0.9" size=".01" type="capsule"/>

                <!-- Lower Arm -->
                <body name="robot_lower_arm" pos="0.21 0 0">
                    <body name="robot_elbow" pos="0 0 0">
                        <geom contype="0" conaffinity="0" pos="0 0 0" name="robot_arm" rgba="0.9 0.1 0.1 0.9" size=".025" type="sphere"/>
                    </body>
                    <joint axis="0 1 0" limited="false" name="robot_elbow_joint" pos="0 0 0" type="hinge"/>
                    <geom contype="0" conaffinity="0" fromto="0 0 0 0.2 0 0" name="robot_lower_arm" rgba="0.0 0.4 0.8 0.9" size=".01" type="capsule"/>
                    <!-- Hand -->
                    <body name="robot_hand" pos="0.2 0 0">
                        <geom conaffinity="0" contype="0" pos="0 0 0" name="robot_hand" rgba="0.1 0.9 0.2 0.9" size=".025" type="sphere"/>
                    </body>
                </body>
            </body>

        </body>
		<!-- Target0 -->
		<body name="target0" pos="0 0 0">
			<joint armature="0" axis="1 0 0" damping="0"  name="target_x0" pos="0 0 0" type="slide"/>
			<joint armature="0" axis="0 1 0" damping="0"  name="target_y0" pos="0 0 0" type="slide"/>
			<joint armature="0" axis="0 0 1" damping="0"  name="target_z0" pos="0 0 0" type="slide"/>
			<geom conaffinity="0" contype="0" name="target0" pos="0 0 0" rgba="0.9 0.2 0.2 1" size=".025" type="sphere" mass="0"/>
		</body>

		<!-- Target1 -->
		<body name="target1" pos="0 0 0">
			<joint armature="0" axis="1 0 0" damping="0" name="target_x1" pos="0 0 0" type="slide"/>
			<joint armature="0" axis="0 1 0" damping="0" name="target_y1" pos="0 0 0" type="slide"/>
			<joint armature="0" axis="0 0 1" damping="0" name="target_z1" pos="0 0 0" type="slide"/>
			<geom conaffinity="0" contype="0" name="target1" pos="0 0 0" rgba="0.2 0.9 0.2 1" size=".025" type="sphere" mass="0"/>
		</body>
	</worldbody>
	<actuator>
		<motor gear="100.0" joint="robot_shoulder_joint_z"/>
		<motor gear="100.0" joint="robot_shoulder_joint_y"/>
		<motor gear="100.0" joint="robot_elbow_joint"/>
	</actuator>
</mujoco>
